{
    "manifest_version": 2,
    "name": "Tracking Transparency",
    "version": "0.0.1",
    "applications": {
        "gecko": {
            "id": "trackingtransparency@super.cs.uchicago.edu"
        }
    },
    "description": "Provides information about online tracking",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "webRequest",
        "webNavigation",
        "<all_urls>"
        ],
    "browser_action": {
        "default_icon": {
        "19": "icons/super-19.png",
        "38": "icons/super-38.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "Tracking Transparency"
    },
    "background": {
        "scripts": [
            "lib/browser-polyfill.min.js",
            "lib/parseUri.js",
            "lib/jquery-3.2.1.min.js",
            "background_scripts/userstudy.js",
            "background_scripts/background.js",
            "background_scripts/popup_connector.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": [
                "lib/boundary/boundary.css",
                "stylesheets/overlay.css"
            ],
            "js": [
                "lib/browser-polyfill.min.js", 
                "lib/parseUri.js",
                "lib/jquery-3.2.1.min.js",
                "lib/boundary/boundary.js",
                "dist/overlay.js",
                "dist/content_script.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "icons": {
        "128": "icons/super-128.png",
        "16": "icons/super-16.png",
        "170": "icons/super-170.png",
        "19": "icons/super-19.png",
        "24": "icons/super-24.png",
        "32": "icons/super-32.png",
        "38": "icons/super-38.png",
        "48": "icons/super-48.png"
  }
}
