{
    "manifest_version": 2,
    "name": "Tracking Transparency",
    "version": "1.0.0",
    "description": "Provides information about online tracking",
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
        ],
    "browser_action": {
        "default_icon": {
        "19": "icons/super-19.png",
        "38": "icons/super-38.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "Tracking Transparency"
    },
    "background": {
        "scripts": [
            "lib/browser-polyfill.min.js",
            "lib/jquery-3.2.1.min.js",
            "lib/lovefield.min.js",
            "background_scripts/datastore.js",
            "dist/inferencing.js",
            "background_scripts/webrequest.js",
            "background_scripts/popup_connector.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "lib/browser-polyfill.min.js", 
                "dist/content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icons/super-128.png",
        "16": "icons/super-16.png",
        "170": "icons/super-170.png",
        "19": "icons/super-19.png",
        "24": "icons/super-24.png",
        "32": "icons/super-32.png",
        "38": "icons/super-38.png",
        "48": "icons/super-48.png"
  }
}
